{
    "name": "skills17/phpunit-helpers",
    "description": "This package provides some phpunit helpers for usage in a skills competition environment.",
    "type": "library",
    "license": "MIT",
    "require": {
        "phpunit/phpunit": "^9"
    },
    "scripts": {
        "post-install-cmd": [
            "composer --working-dir=tests/integration/minimal install"
        ],
        "lint": "phpcs",
        "lint:fix": "phpcbf"
    },
    "authors": [
        {
            "name": "Cyril Wanner",
            "email": "info@cyr.li"
        }
    ],
    "autoload": {
        "psr-4": {
            "Skills17\\PHPUnit\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Skills17\\PHPUnit\\Test\\": "tests/"
        }
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5"
    }
}
